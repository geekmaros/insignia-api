generator client {
  provider     = "prisma-client"
  moduleFormat = "cjs"
  output       = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      Role     @default(USER)
  avatarUrl String? //
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authAccounts AuthAccount[]
  cards        Card[]
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

model AuthAccount {
  id                Int          @id @default(autoincrement())
  userId            Int
  passwordHash      String?
  provider          AuthProvider
  providerAccountId String?
  expiresAt         DateTime?
  createdAt         DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

enum AuthProvider {
  LOCAL
  GOOGLE
  GITHUB
  MAGIC_LINK
}

model Card {
  id     Int @id @default(autoincrement())
  userId Int

  displayName String
  title       String?
  slug        String  @unique

  prefix        String?
  suffix        String?
  accreditation String?
  department    String?
  company       String?
  headline      String?

  isPublic Boolean @default(true)
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  links      CardLink[]
  appearance CardAppearance?

  @@index([userId])
}

model CardLink {
  id     Int @id @default(autoincrement())
  cardId Int

  type     String
  label    String?
  value    String
  position Int

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@index([cardId])
}

model CardAppearance {
  id     Int @id @default(autoincrement())
  cardId Int @unique

  theme   String?
  logoUrl String?
  config  Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)
}
